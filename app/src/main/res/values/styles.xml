<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NaverMiniLight" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorBackground">@color/nm_colorBackground</item>
        <item name="android:colorForeground">@color/nm_colorBackground</item>
        <item name="android:textColorPrimary">@color/nm_colorText</item>
        <item name="android:textColorPrimaryInverse">@color/nm_colorTextAccent</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="android:windowBackground">@color/nm_colorBackground</item>
    </style>

    <style name="simpleListStyle">
        <item name="android:divider">@color/nm_colorTextLight</item>
    </style>

    <style name="detailsItem">
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textColor">@color/nm_colorTextAccent</item>
    </style>

    <style name="detailsItemExtra">
        <item name="android:textSize">@dimen/textSizeH2</item>
        <item name="android:textColor">@color/nm_colorText</item>
    </style>

    <style name="detailsItemMajor">
        <item name="android:textSize">@dimen/textSizeH2</item>
        <item name="android:textColor">@color/nm_colorTextAccent</item>
    </style>

    <style name="detailsItemMinor">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/nm_colorText</item>
    </style>

    <style name="textH1">
        <item name="android:textSize">@dimen/textSizeH1</item>
        <item name="android:textColor">@color/nm_colorH1</item>
    </style>


    <style name="textH2">
        <item name="android:textSize">@dimen/textSizeH2</item>
        <item name="android:textColor">@color/nm_colorH2</item>
    </style>

    <style name="textSimple">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">@color/nm_colorText</item>
    </style>

    <style name="textLesser">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/nm_colorText</item>
    </style>

</resources>