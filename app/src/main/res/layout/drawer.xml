<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.stealthmateoriginal.navermini.UI.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false" />


    <ScrollView
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/nm_colorBackground">

        <RadioGroup
            android:id="@+id/view_home_dict_btn_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/view_home_dict_btn_kr"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_kr"
                android:button="@null"
                android:onClick="onSelectDictionary" />

            <RadioButton
                android:id="@+id/view_home_dict_btn_jp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_jp"
                android:button="@null"
                android:onClick="onSelectDictionary" />

            <RadioButton
                android:id="@+id/view_home_dict_btn_en"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_en"
                android:button="@null"
                android:onClick="onSelectDictionary" />

        </RadioGroup>

    </ScrollView>

</android.support.v4.widget.DrawerLayout>