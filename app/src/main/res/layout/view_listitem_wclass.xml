<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:id="@+id/view_listitem_wclass_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/nm_colorTextAccent"
         android:textSize="17sp"
        android:text="WORD CLASS"/>

    <com.stealthmatedev.navermini.UI.generic.FixedListView
        android:id="@+id/view_listitem_wclass_deflist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:divider="@color/nm_colorPrimaryDark"
        android:dividerHeight="1dp"
        android:layout_marginStart="20dp"/>

</LinearLayout>