<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_jp_detail_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_en_detail_word_head"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/view_en_detail_word_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="もつ"
            android:textColor="@color/nm_colorTextAccent"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/view_en_detail_word_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/view_en_detail_word_name"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/view_en_detail_word_name"
            android:layout_toEndOf="@id/view_en_detail_word_name"
            android:text="持つ"
            android:textColor="@color/nm_colorTextAccent"
            android:textSize="20sp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/view_en_detail_word_deflist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

    </ListView>

    <LinearLayout
        android:id="@+id/view_en_detail_word_def_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:animateLayoutChanges="true"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/nm_colorPrimary"
            android:gravity="center"
            android:text="@string/label_details_def_ex"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/view_en_detail_word_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="DEFINITION"
            android:textColor="@color/nm_colorTextAccent"
            android:textSize="15sp"/>

        <ListView
            android:id="@+id/view_en_detail_word_definition_gloss"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="10dp"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

        </ListView>

    </LinearLayout>

</LinearLayout>
