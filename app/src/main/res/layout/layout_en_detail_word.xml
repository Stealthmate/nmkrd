<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_jp_detail_word"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:padding="7dp">

    <RelativeLayout
        android:id="@+id/view_en_detail_word_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/view_en_detail_word_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="true"
            android:gravity="bottom"
            android:text="もつ"
            android:textColor="@color/nm_colorTextAccent"
            android:textIsSelectable="true"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/view_en_detail_word_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/view_en_detail_word_name"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/view_en_detail_word_name"
            android:layout_toRightOf="@id/view_en_detail_word_name"
            android:focusable="true"
            android:text="持つ"
            android:textColor="@color/nm_colorText"
            android:textIsSelectable="true"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/view_en_detail_word_head"
        android:orientation="vertical">

        <ListView
            android:id="@+id/view_en_detail_word_deflist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:animateLayoutChanges="true"
            android:padding="5dp">

        </ListView>

        <LinearLayout
            android:id="@+id/view_en_detail_word_def_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:background="@color/nm_colorPrimaryLight"
            android:minHeight="200dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/nm_colorPrimary"
                android:gravity="center"
                android:text="@string/label_details_def_ex"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/view_en_detail_word_meaning_ex_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:padding="5dp">

            </ListView>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
