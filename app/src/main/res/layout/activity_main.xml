<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stealthmateoriginal.navermini.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_main_topbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:background="@color/nm_colorPrimary">

        <ImageButton
            android:id="@+id/view_main_menu_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/menu_btn_selector"
            android:paddingTop="5dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/nm_colorText"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/view_main_sidebar"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/nm_colorPrimaryLight">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/view_home_dict_btn_kr"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:button="@null"
                    android:background="@drawable/btn_kr"
                    android:onClick="onSelectDictionary"/>

                <RadioButton
                    android:id="@+id/view_home_dict_btn_jp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:button="@null"
                    android:background="@drawable/btn_jp"
                    android:onClick="onSelectDictionary"/>
                
                <RadioButton
                    android:id="@+id/view_home_dict_btn_en"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:button="@null"
                    android:background="@drawable/btn_en"
                    android:onClick="onSelectDictionary"
                    />

            </RadioGroup>

        </LinearLayout>

        <com.stealthmateoriginal.navermini.UI.CustomViewPager
            android:id="@+id/viewpager"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>
