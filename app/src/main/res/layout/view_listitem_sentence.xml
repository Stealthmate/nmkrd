<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/view_listitem_sentence_cc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/nm_colorPrimaryLight"
        android:gravity="center"
        android:padding="3dp"
        android:text="KR-KR"
        android:textColor="@color/nm_colorTextAccent"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/view_listitem_sentence_keyword"
        style="@style/textSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBaseline="@id/view_listitem_sentence_cc"
        android:gravity="center"
        android:text="KEYWORD"
        android:textSize="20sp"
        android:textColor="@color/nm_colorTextAccent"/>

    <com.stealthmatedev.navermini.UI.generic.FuriganaTextView
        android:id="@+id/view_listitem_sentence_original"
        style="@style/textSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/view_listitem_sentence_cc"
        android:layout_marginTop="3dp"
        android:text="VERY LONG LONG LONG ONG LONG LOLNG LONG TEXT"
        android:textSize="17sp" />


    <com.stealthmatedev.navermini.UI.generic.FuriganaTextView
        android:id="@+id/view_listitem_sentence_translated"
        style="@style/textSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/view_listitem_sentence_original"
        android:layout_marginTop="5dp"
        android:text="VERY LONG LONG LONG ONG LONG LOLNG LONG TEXT"
        android:textSize="17sp" />
</RelativeLayout>