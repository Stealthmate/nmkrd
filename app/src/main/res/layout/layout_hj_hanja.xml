<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_hj_hanja"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">


    <TextView
        android:id="@+id/view_hj_entry_hanja"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"

        android:layout_marginEnd="5dp"

        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="生"
        android:textColor="@color/nm_colorTextAccent"
        android:textSize="60sp" />

    <LinearLayout
        android:id="@+id/view_hj_entry_hanja_group_strokes"

        android:layout_width="90dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="end">

        <TextView
            android:id="@+id/view_hj_entry_hanja_strokes_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/label_strokes"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/view_hj_hanja_strokes"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="13"

            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_hj_entry_hanja_group_radical"

        android:layout_width="90dp"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@id/view_hj_entry_hanja_group_strokes"

        android:layout_alignRight="@id/view_hj_entry_hanja_group_strokes"
        android:layout_below="@id/view_hj_entry_hanja_group_strokes"
        android:gravity="end">

        <TextView
            android:id="@+id/view_hj_entry_hanja_radical_label"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/label_radical"

            android:textSize="13sp" />

        <TextView
            android:id="@+id/view_hj_entry_hanja_radical"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="生"

            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/view_hj_entry_hanja_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:text="중학용, 읽기 4급, 쓰기 3급"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/view_hj_entry_hanja_readings"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@id/view_hj_entry_hanja"
        android:layout_toEndOf="@id/view_hj_entry_hanja"
        android:layout_toLeftOf="@id/view_hj_entry_hanja_group_strokes"
        android:layout_toRightOf="@id/view_hj_entry_hanja"
        android:layout_toStartOf="@id/view_hj_entry_hanja_group_strokes"
        android:ellipsize="end"
        android:maxLines="1"

        android:text="READINGSSADGASDHGSHSFHSFHSFHSFHSFH "

        android:textColor="@color/nm_colorTextAccent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/view_hj_entry_hanja_meaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_hj_entry_hanja_readings"
        android:layout_toEndOf="@id/view_hj_entry_hanja"
        android:layout_toLeftOf="@id/view_hj_entry_hanja_difficulty"
        android:layout_toRightOf="@id/view_hj_entry_hanja"
        android:layout_toStartOf="@id/view_hj_entry_hanja_difficulty"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="사사(私事: 사삿일), 사삿일(私事-: 개인의 사사로운 일) "
        android:textColor="@color/nm_colorText"
        android:textSize="15sp" />

</RelativeLayout>